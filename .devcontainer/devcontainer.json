{
  "name": "loan_default_prediction",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/terraform:1": { "version": "1.9.5" },
    "ghcr.io/devcontainers/features/google-cloud-sdk:1": {}
  },

  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements-dev.txt && pip install -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "hashicorp.terraform",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
